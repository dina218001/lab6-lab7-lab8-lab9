#include <stdio.h>

#include <math.h>

#include <locale.h>

#include <conio.h>

#include <stdlib.h>

void main()

{

setlocale(LC_CTYPE,"");

int x[20],y[20];

int j=0,l;

// Ввод элементов массива

printf("Введите 20 элементов массива\n");

for (int i=0;i<20;i++)

{printf("Введите x[%i]\n",i);

scanf("%i",&x[i]);}

printf("Исходный массив:\n");

for(int i=0;i<20;i++)

{ printf(" %i", x[i]);

if(i%5==4)

printf("\n");}

/////////////////////////////

for (int i=0;i<20;i++)

{

if (x[i]<0)

{

y[j]=x[i];

j++;

}

}

if (j>0)
//////////////////////

{

for (j;j<=20;j++)

{

y[j]=1;

}

}
//сортировка по убыванию

for (int i = 20 - 1; i >= 1; i--)

for (int l = 0; l < i; l++)

{

if (y[l] < y[l + 1])

{

int f = y[l];

y[l] = y[l + 1];

y[l + 1] = f;

}

}
